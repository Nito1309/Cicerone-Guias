<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    cardview:cardBackgroundColor="@color/colorPrimary"
    cardview:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtTituloReservacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="Reservacion con  Juan Pablo "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <!--style="?android:attr/actionOverflowButtonStyle"-->

                <ImageButton
                    android:id="@+id/btnThreePoints"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_three_points"
                    android:layout_gravity="center_vertical"
                     />

            </LinearLayout>

            <TextView
                android:id="@+id/txtFechaReservacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:maxLength="25"
                android:text="El 2020/01/01 a las 19:00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginRight="25dp"
                />

        </LinearLayout>

</androidx.cardview.widget.CardView>