<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PanicButtonActivity"
    android:weightSum="14">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_panic_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Red"
        android:elevation="3dp"
        app:navigationContentDescription="@string/Cicerone"
        app:title="@string/Cicerone"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="BOTÓN DE PÁNICO"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/Red"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="32sp"
        android:text="@string/cu_l_es_su_emergencia"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_weight="1"/>
    <GridLayout
        android:id="@+id/Grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="10"
        android:padding="16dp">

        <!-- Columna 1 Fila 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/columna1Fila1c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna1Fila1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>

        <!-- columna 1 -->
        <!-- fila 1 -->
        </androidx.cardview.widget.CardView>

        <!-- columna 2 Fila 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/columna2Fila1c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna2Fila1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- columna 1 Fila 2-->

        <androidx.cardview.widget.CardView
            android:id="@+id/columna1Fila2c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna1Fila2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <!-- columna 1 -->
            <!-- fila 1 -->
        </androidx.cardview.widget.CardView>

        <!-- columna 2 Fila 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/columna2Fila2c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna2Fila2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- columna 1 Fila 3-->

        <androidx.cardview.widget.CardView
            android:id="@+id/columna1Fila3c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna1Fila3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!-- columna 2 Fila 3-->
        <androidx.cardview.widget.CardView
            android:id="@+id/columna2Fila3c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/columna2Fila3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="24sp"
                    android:textColor="@color/Black"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>


</LinearLayout>